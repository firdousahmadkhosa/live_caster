<%- include('.\\' + '../_layouts/header'); %>
<%- include('.\\' + '../frentEnd/bracking_news'); %>
<!-- ##### Blog Area Start ##### -->
<div class="blog-area section-padding-0-80">
    <div class="container">
        <div class="row">
            <%if(news.length>=1){ var id=news[0].id;%>
            <div class="col-12 col-lg-8">
                <div class="blog-posts-area">

                    <!-- Single Featured Post -->
                    <div class="single-blog-post featured-post single-post">
                        <div class="post-thumb">
                           
                            <div  style="max-width:767px; height:384px" data-simple-slider>
                                <%for(var i=0; i<news.length; i++){%>
                                    <%if(news[i].id==id){%>  
                                <img src="data:<%=news[i].media_type%>;base64,<%= typeof news[i].media_data!='undefined'?
                                news[i].media_data: '' %>" style="width:700px; height:384px"   alt=""/>   
                                <%}%>
                                <%}%>  
                              </div>
                              <script src="https://cdnjs.cloudflare.com/ajax/libs/simple-slider/1.0.0/simpleslider.min.js"></script>
                              <script>
                                simpleslider.getSlider();
                              </script> 
                         

                        </div>
                        <div class="post-data">
                            <a href="/category/<%=news[0].title%>" class="post-catagory"><%=news[0].title%></a>
                            <a href="/news/<%=news[0].id%>" class="post-title">
                                <h6><%=news[0].news_title%></h6>
                            </a>
                            <div class="post-meta">
                                <p class="post-author">By <a href="#"><%=news[0].username%></a></p>
                                <p class="post-excerp"><%=news[0].sub_title%> </p>


                                <div class="newspaper-post-like d-flex align-items-center justify-content-between">

                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="pager d-flex align-items-center justify-content-between">
                        <div class="prev">
                         <%if(news_all[0]!=news[0].id){%>
                            <% var a=-0; for(var i=0;i<news_all.length; i++){ %>
                                <%  if(news_all[i]==news[0].id){a=news_all[i-1];  } }%>
                         <a href="/news/<%=a%>" class="active"><i class="fa fa-angle-left"></i> previous</a><%}%>
                            
                        </div>
                        <div class="next">
                            <% var last_id=ids.length-1; if(ids[last_id]!=news[0].id){ %>
                                <% var a=-0; for(var i=0;i<ids.length; i++){ %>
                                  <%  if(ids[i]==news[0].id){a=ids[i+1]; } }%>  <a href="/news/<%=a%>" class="active">Next <i class="fa fa-angle-right"></i></a><%}%>
                        </div>
                    </div>

                    <div class="section-heading">
                        <h6>Related</h6>
                    </div>

                    <div class="row">
                        <% var id=-0;  var temp =0; for(var j=0;j<news.length;j++){  %>
                        <%if( id!=news[j].id){   id = news[j].id%>
                        <%if(news[0].title==news[j].title){ %>

                        <%  if(temp<=3 ){%>
                        <!-- Single Post -->
                        <div class="col-12 col-md-6">
                            <div class="single-blog-post style-3 mb-80">
                                <div class="post-thumb">
                                    <a href="/news/<%=news[j].id%>"><img src="data:<%=news[j].media_type%>;base64,<%= typeof news[j].media_data!='undefined'?
                                        news[j].media_data: '' %>" style="max-width:250px; height:250px;" alt=""></a>
                                </div>
                                <div class="post-data">
                                    <a href="/category/<%=news[0].title%>" class="post-title">
                                        <h6><%=news[0].title%></h6>
                                    </a>
                                    <a href="/news/<%=news[j].id%>" class="post-title">
                                        <h6><%=news[j].news_title%></h6>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <%} else{ temp =0; continue;}%>
                        <% temp+=1;}%>
                        <%  }%>
                        <%  }%>

                    </div>




                </div>
            </div>
            <%  if(ids.length>=2){ var a=0;%>
            <div class="col-12 col-lg-4">
                <div class="blog-sidebar-area">

                    <!-- Latest Posts Widget -->
                    <div class="latest-posts-widget mb-50">

                        <!-- Single Featured Post -->
                        <%var id=news[0].id; var tmp=0;%>

                        <% for(var j=0; j<news.length;j++){%>
                        <%  if(id!=news[j].id){%>
                        <%  if(tmp<6){%>
                        <div class="single-blog-post small-featured-post d-flex">
                            <div class="post-thumb">
                                <a href="/news/<%=news[j].id%>"><img src="data:<%=news[j].media_type%>;base64,<%= typeof news[j].media_data!='undefined'?
                                    news[j].media_data: '' %>" style="max-width:100px; height:100px" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="/category/<%=news[j].title%>" class="post-catagory"><%=news[j].title%></a>
                                <div class="post-meta">
                                    <a href="/news/<%=news[j].id%>" class="post-title">
                                        <h6><%=news[j].news_title%></h6>
                                    </a><%var dt =new Date(news[j].date_time); %>
                                    <%var h = dt.getHours();var m = dt.getMinutes();%>
                                    <%var time = (h > 12) ? (h - 12 + ':' + m + ' PM') : (h + ':' + m + ' AM'); %>
                                    <%var day = ("0" + dt.getDate()).slice(-2);%>
                                    <%var mnth = ("0" + (dt.getMonth() + 1)).slice(-2);%>
                                    <%var mnth_name=dt.toLocaleString('default', { month: 'long' });%>
                                    <p class="post-date"><span><%=time%></span> | <span><%=mnth_name%> <%=day%> </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% } %>
                        <% id= news[j].id; tmp=tmp+1;}else{continue;}%>
                        <% } %>


                    </div>
                </div>


            </div>
            <%}%>
            <%}%>
        </div>
    </div>
</div>
    <!-- ##### Blog Area End ##### -->
    <%- include('.\\' + '../_layouts/footer'); %>