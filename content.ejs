<!-- ##### Featured Post Area Start ##### -->
<div class="featured-post-area">
    <div class="container">
        <div class="row">
            
            <div class="col-12 col-md-6 col-lg-8">
                <div class="row">
                    <%if(news.length>=1){ var id=news[0].id;%>
                    <!-- Single Featured Post -->
                    <div class="col-12 col-lg-7">

                        <div class="single-blog-post featured-post">
                                <div class="post-thumb">

                                <div  style="max-width:550px; height:350px"  data-simple-slider >
                                    <%for(var i=0; i<news.length; i++){%>
                                        <%if(news[i].id==id){%>  
                                <a href="/news/<%=news[i].id%>"><img src="data:<%=news[i].media_type%>;base64,<%= typeof news[i].media_data!='undefined'?
                                    news[i].media_data: '' %>"  style="max-width:100%; height:350px" alt=""></a>
                                    <%}%>
                                    <%}%>
                                </div>
                                <script src="https://cdnjs.cloudflare.com/ajax/libs/simple-slider/1.0.0/simpleslider.min.js"></script>
                                <script>
                                  simpleslider.getSlider();
                                </script> 



                            </div>
                           
                            <div class="post-data">
                                <a href="/category/<%=news[0].title%>" class="post-catagory"><%=news[0].title%></a>
                                <a href="/news/<%=news[0].id%>" class="post-title">
                                    <h6><%=news[0].news_title%></h6>
                                </a>
                                <div class="post-meta">
                                    <p class="post-author">By <a href="#"><%=news[0].username%></a></p>
                                    <p class="post-excerp"><%=news[0].sub_title%> </p>

                                </div>
                            </div>
                        </div>
                    </div>
                   

                    <%if(ids.length>=2){ var a=0;%>
                        <div class="col-12 col-lg-5">
                            <!-- Single Featured Post -->
                        <%for(var j=0; j<news.length; j++){  %>
                        <%if(id !=news[j].id){%>
                            <%if(a<2){ %>
                        <div class="single-blog-post featured-post-2">
                            <div class="post-thumb" style="max-width:330px; height:190px;">
                                <a href="/news/<%=news[j].id%>"><img src="data:<%=news[j].media_type%>;base64,<%= typeof news[j].media_data!='undefined'?
                                    news[j].media_data: '' %>" style="width:300px; height:190px;" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="/category/<%=news[j].title%>" class="post-catagory"><%=news[j].title%></a>
                                <div class="post-meta">
                                    <a href="/news/<%=news[j].id%>" class="post-title">
                                        <h6><%=news[j].news_title%></h6>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% a=a+1;}else{break;}%>
                        <%}else{continue;}%>
                        <% id=news[j].id; }%>
                        <%}%>
                    </div>
                    <%}%>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <!-- Single Featured Post -->
                    <%if(ids.length>=4){ var id=news[3].id; var tmp=0;%>
                       
                    <% for(var j=4; j<news.length;j++){%>
                    <%  if(id!=news[j].id){%>
                        <%  if(tmp<6){%> 
                    <div class="single-blog-post small-featured-post d-flex" style="padding-left: 20px;">
                        <div class="post-thumb" >
                            <a href="/news/<%=news[j].id%>"><img src="data:<%=news[j].media_type%>;base64,<%= typeof news[j].media_data!='undefined'?
                            news[j].media_data: '' %>" style="max-width:100px; height:100px" alt=""></a>
                        </div>
                        <div class="post-data">
                            <a href="/category/<%=news[j].title%>" class="post-catagory"><%=news[j].title%></a>
                            <div class="post-meta">
                                <a href="/news/<%=news[j].id%>" class="post-title">
                                    <h6><%=news[j].news_title%></h6>
                                </a><%var dt =new Date(news[j].date_time); %>
                                <%var h = dt.getHours();var m = dt.getMinutes();%>
                                <%var time = (h > 12) ? (h - 12 + ':' + m + ' PM') : (h + ':' + m + ' AM'); %>
                                <%var day = ("0" + dt.getDate()).slice(-2);%>
                                <%var mnth = ("0" + (dt.getMonth() + 1)).slice(-2);%>
                                <%var mnth_name=dt.toLocaleString('default', { month: 'long' });%>
                                <p class="post-date"><span><%=time%></span> | <span><%=mnth_name%> <%=day%> </span></p>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% id= news[j].id; tmp=tmp+1;}else{continue;}%>
                    <% } %>
                    <%}%>
                    
                  
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Featured Post Area End ##### -->



    <%if(categories_news.length!=0){ %>
    <%for(var i=0; i<categories_news.length; i++){ %>
    <!-- ##### Editorial Post Area Start ##### -->
    <div class="editors-pick-post-area section-padding-30-30">
        <div class="container">
            <div class="row">
                <!-- Editors Pick -->
                <div class="col-12 col-md-7 col-lg-12">
                    <div class="section-heading"><a href="/category/<%=categories_news[i]%>">
                        <h6><%=categories_news[i]%></h6></a>
                    </div>
                    <div class="row">
                        <% var id=-0;  var temp =0; for(var j=0;j<news.length;j++){  %>
                            <%if( id!=news[j].id){   id = news[j].id%>
                        <%if(categories_news[i]==news[j].title){ %>
                            
                        <%  if(temp<=3 ){%>
                        <!-- Single Post -->
                        <div class="col-12 col-lg-3">
                            <div class="single-blog-post" style="margin-left: 10px;">
                                <div class="post-thumb" style="max-width:290px; height:290px;  ">
                                    <a href="/news/<%=news[j].id%>"><img src="data:<%=news[j].media_type%>;base64,<%= typeof news[j].media_data!='undefined'?
                                    news[j].media_data: '' %>" style="max-width:250px; height:250px;" alt=""></a>
                                </div>
                                <div class="post-data">
                                    <a href="/news/<%=news[j].id%>" class="post-title">
                                        <h6><%=news[j].news_title%></h6>
                                    </a>
                                    <div class="post-meta"><%var dt =new Date(news[j].date_time); %>
                                        <%var day = ("0" + dt.getDate()).slice(-2);%>
                                        <%var mnth_name=dt.toLocaleString('default', { month: 'long' });%>
                                        <div class="post-date"><p ><%=mnth_name%> <%=day%>,
                                                <%=dt.getFullYear()%></p></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%temp+=1;} else{  continue;}%>
                                    <% }%>
                        <%  }%>
                <%  }%>


                    </div>
                </div>


            </div>
        </div>
    </div>
    <!-- ##### Editorial Post Area End ##### -->
    <%}%>
<%}%>
